[Unit]
Description=Podman Container - {{ container_name }}

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=on-failure
TimeoutStopSec=70
ExecStartPre=/bin/rm -f %t/{{ container_name }}.ctr-id
ExecStart=/usr/bin/podman run --rm -d
    --cgroups=no-conmon --sdnotify=conmon \
    --cidfile=%t/{{ container_name }}.ctr-id \
    --log-driver=journald \
{% if pod %}
    --name {{ pod }}-{{ container_name }} \
    --pod-id-file %t/{{ pod }}.pod-id \
{% else %}
    --name {{ container_name }} \
{% endif %}
{% for port in ports %}
    -p {{ port.host }}:{{ port.container }} \
{% endfor %}
{% for env_var in env_vars %}
    -e {{ env_var }} \
{% endfor %}
{% for mount in mounts %}
    -v {{ mount }}:Z \
{% endfor %}
    {{ image }}:{{ tag }}
ExecStop=/usr/bin/podman stop --ignore \
    --cidfile=%t/{{ container_name }}.ctr-id
ExecStopPost=/usr/bin/podman rm -f --ignore \
    --cidfile=%t/{{ container_name }}.ctr-id
Type=notify
NotifyAccess=all

[Install]
WantedBy=multi-user.target default.target