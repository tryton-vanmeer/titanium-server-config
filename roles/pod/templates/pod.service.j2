[Unit]
Description=Podman Pod - {{ pod_name }}

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=on-failure
TimeoutStopSec=70
ExecStartPre=/bin/rm -f %t/{{ pod_name }}.pid %t/{{ pod_name }}.pod-id
ExecStartPre=/usr/bin/podman pod create \
    --infra-conmon-pidfile %t/{{ pod_name }}.pid \
    --pod-id-file %t/{{ pod_name }}.pod-id \
{% for port in ports %}
    -p {{ port.host }}:{{ port.container }} \
{% endfor %}
    --name {{ pod_name }} --replace
ExecStart=/usr/bin/podman pod start --pod-id-file %t/{{ pod_name }}.pod-id
ExecStop=/usr/bin/podman pod stop --ignore -t 10 \
    --pod-id-file %t/{{ pod_name }}.pod-id
ExecStopPost=/usr/bin/podman pod rm --ignore -f \
    --pod-id-file %t/{{ pod_name }}.pod-id
PIDFile=%t/{{ pod_name }}.pid
Type=forking

[Install]
WantedBy=multi-user.target default.target